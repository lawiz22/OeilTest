                        "activity": "SP_SLA_Compute_OEIL",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "linkedServiceName": {
                    "referenceName": "LS_AzureSQL_Vigie",
                    "type": "LinkedServiceReference"
                },
                "typeProperties": {
                    "scripts": [
                        {
                            "parameters": [
                                {
                                    "name": "ctrl_id",
                                    "type": "String",
                                    "value": {
                                        "value": "@pipeline().parameters.p_ctrl_id",
                                        "type": "Expression"
                                    },
                                    "direction": "Input"
                                }
                            ],
                            "type": "Query",
                            "text": "UPDATE dbo.vigie_ctrl\nSET sla_bucket =\n    CASE\n        WHEN duration_sec IS NULL\n          OR oeil_sla_expected_sec IS NULL\n          OR oeil_sla_threshold_sec IS NULL\n            THEN 'UNKNOWN'\n\n        WHEN duration_sec <= oeil_sla_expected_sec\n            THEN 'FAST'\n\n        WHEN duration_sec <= oeil_sla_threshold_sec\n            THEN 'SLOW'\n\n        ELSE 'VERY_SLOW'\n    END\nWHERE ctrl_id = @ctrl_id;\n"
                        }
                    ],
                    "scriptBlockExecutionTimeout": "02:00:00"
                }
            },
            {
                "name": "SC_Set_Volume_Check",
                "type": "Script",
                "dependsOn": [
