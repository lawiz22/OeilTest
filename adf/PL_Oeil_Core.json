                },
                "typeProperties": {
                    "scripts": [
                        {
                            "parameters": [
                                {
                                    "name": "ctrl_id",
                                    "type": "String",
                                    "value": {
                                        "value": "@pipeline().parameters.p_ctrl_id",
                                        "type": "Expression"
                                    },
                                    "direction": "Input"
                                }
                            ],
                            "type": "NonQuery",
                            "text": "UPDATE dbo.vigie_ctrl\nSET volume_status =\n    CASE\n        WHEN expected_rows IS NULL\n          OR expected_rows = 0\n            THEN 'UNKNOWN'\n\n        WHEN row_count_adf_ingestion_copie_parquet IS NULL\n            THEN 'MISSING'\n\n        WHEN row_count_adf_ingestion_copie_parquet = expected_rows\n            THEN 'OK'\n\n        ELSE 'ANOMALY'\n    END\nWHERE ctrl_id = @ctrl_id;\n"
                        }
                    ],
                    "scriptBlockExecutionTimeout": "02:00:00"
                }
            },
