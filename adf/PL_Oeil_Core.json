                            "text": "UPDATE dbo.vigie_ctrl\nSET alert_flag =\n    CASE\n        WHEN alert_level IN ('WARNING', 'CRITICAL') THEN 1\n        ELSE 0\n    END\nWHERE ctrl_id = @ctrl_id;"
                        }
