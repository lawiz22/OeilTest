                            "p_period": "@pipeline().parameters.p_period",
                            "p_year": "@pipeline().parameters.p_year",
                            "p_month": "@pipeline().parameters.p_month",
                            "p_day": "@pipeline().parameters.p_day"
                        }
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "DS_Standardized_Parquet",
                        "type": "DatasetReference",
                        "parameters": {
                            "p_table": "@pipeline().parameters.p_table",
                            "p_year": "@pipeline().parameters.p_year",
                            "p_month": {
                                "value": "@pipeline().parameters.p_month",
                                "type": "Expression"
                            },
                            "p_day": "@pipeline().parameters.p_day"
                        }
                    }
                ]
            },
            {
                "name": "Copy fichier done",
                "type": "Copy",
                "dependsOn": [
                    {
                        "activity": "Bronze To Standard",
