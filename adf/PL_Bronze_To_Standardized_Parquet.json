{
    "name": "PL_Bronze_To_Standardized_Parquet",
    "properties": {
        "activities": [
            {
                "name": "Bronze To Standard",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [
