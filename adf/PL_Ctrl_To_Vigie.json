                            "type": "Query",
                            "text": "UPDATE dbo.vigie_ctrl\nSET sla_bucket =\n    CASE\n        WHEN duration_sec IS NULL\n          OR oeil_sla_expected_sec IS NULL\n          OR oeil_sla_threshold_sec IS NULL\n            THEN 'UNKNOWN'\n\n        WHEN duration_sec <= oeil_sla_expected_sec\n            THEN 'FAST'\n\n        WHEN duration_sec <= oeil_sla_threshold_sec\n            THEN 'SLOW'\n\n        ELSE 'VERY_SLOW'\n    END\nWHERE ctrl_id = @ctrl_id;\n"
